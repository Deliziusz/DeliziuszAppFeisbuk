<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@drawable/dos"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="#2112F5"
        />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="282dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="273dp" />

    <com.facebook.share.widget.ShareButton
        android:id="@+id/btn_link"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="146dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="185dp"
        android:background="#BF000000"
        android:text="@string/share_link"
        android:translationY="450dp" />

    <TextView
        android:id="@+id/txtbienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="Bienvenido a DeliziuszAppFeisbuk"
        android:textColor="#D612F5"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtdescrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="351dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="Logeate desde esta App y publica en post en tu bio"
        android:textColor="#F5122D"
        android:textSize="14dp"
        android:textStyle="bold" />

</RelativeLayout>